@using Gestion_Proyectos_BE
@model IEnumerable<Gestion_Proyectos_BE.Proyecto_BE>

@{
    ViewBag.Title = "Inicio - Gestión de Proyectos";
    Usuario_BE reg = (Usuario_BE)Session["usuario"];
    IEnumerable<string> permisosEscritura = Session["permisosEscritura"] != null ? Session["permisosEscritura"] as IEnumerable<string> : new List<string>();
    // Corregir posible causa del problema
    string escritura = permisosEscritura.Where(pe => pe.Trim() == "Proyectos").FirstOrDefault();
    var tareas = ViewBag.tareas;
}

<!-- Content Header (Page header) -->
<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-md-6">
                <h3>Listado de Proyectos</h3>
            </div>
            @if (escritura != null)
            {
                <a href="@Url.Action("Registrar", "Proyectos")" class="btn btn-primary ml-auto">Nuevo Proyecto</a>
            }
            <!--<a><button class="btn btn-primary" type="button">Nuevo Proyecto</button></a>-->
        </div>
    </div><!-- /.container-fluid -->
</section>

<!-- Main content -->
<section class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <!-- /.card-header -->
                    <div class="card-body">
                        @if (TempData["mensaje"] != null)
                        {
                            <div class="alert alert-info" role="alert">
                                <b><span>@TempData["mensaje"]</span></b>
                            </div>
                        }
                        <div class="table-responsive">
                            <table id="example2" class="table table-hover">
                                <thead>
                                    <tr>

                                        <th>ID</th>

                                        <th>Nombre</th>

                                        <th>Prioridad</th>
                                        <th>Área</th>
                                        <th>Fecha Inicio</th>
                                        <th>Fecha Conclusión Estimada</th>
                                        <th>Días de Proyecto</th>
                                        <th>Porcentaje</th>
                                        <th>Estado</th>
                                        @if (escritura != null)
                                        {
                                            <th>Operaciones</th>
                                        }
                                        <th>Miembros</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {

                                        <tr>
                                            <td style="vertical-align:middle;">
                                                <a href="#" class="btn btn-sm btn-primary" id="" data-toggle="modal" data-target="#exampleModalRequerimiento" style="display: flex;align-items: center;">
                                                    <i class="fa-solid fa-list-check" style="margin-right: 10px;"></i> @item.IdProyecto.
                                                </a>
                                            </td>

                                            <td style="vertical-align:middle;">@item.Nombre</td>

                                            <td style="vertical-align:middle;">@item.Prioridad</td>
                                            <td style="vertical-align:middle;">@item.AreaProyecto</td>
                                            <td style="vertical-align:middle;">@(item.FechaInicio.ToString("dd/MM/yyyy") == "01/01/0001" ? "-" : item.FechaInicio.ToString("dd/MM/yyyy"))</td>
                                            <td style="vertical-align:middle;">@(item.FechaConcluidoEstimada.ToString("dd/MM/yyyy") == "01/01/0001" ? "-" : item.FechaConcluidoEstimada.ToString("dd/MM/yyyy"))</td>
                                            <td style="vertical-align:middle;">
                                                @item.DiasRestantes

                                            </td>
                                            <td class="text-center" style="vertical-align:middle;"><span class="badge @item.getColorAvance()">@(item.AvancePorcentaje.ToString() + '%')</span></td>
                                            <td style="vertical-align:middle;">
                                                <span class="badge @item.getColorEstado()">@(item.EstadoProyecto)</span>
                                            </td>
                                            @if (escritura != null)
                                            {
                                                <td class="text-center" style="vertical-align:middle;">
                                                    <a href="@Url.Action("Editar", "Proyectos", new { idProyecto = item.IdProyecto })"><i class="far fa-edit"></i></a>
                                                    <a href="@Url.Action("Asignar", "Proyectos", new { idProyecto = item.IdProyecto })"><i class="fas fa-user-plus"></i></a>

                                                </td>
                                            }
                                            <td style="vertical-align:middle;">

                                                <div class="cont" style="width: 100px;">
                                                    @foreach (var ini in item.ListaMemberes)
                                                    {
                                                        <div class="bg-primary circulo" title="@ini.Alias">
                                                            <p>@ini.Iniciales</p>
                                                        </div>
                                                    }

                                                </div>
                                            </td>
                                        </tr>

                                    }
                                </tbody>
                            </table>
                        </div>
                        <!-- /.card-body -->
                    </div>
                </div>
                <!-- /.card -->
            </div>
            <!-- /.col -->
        </div>
        <!-- /.row -->
        <!-- Modal Requerimiento -->
        <div class="modal fade" id="exampleModalRequerimiento" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
            <div class="modal-dialog modal-dialog-centered" role="document">
                <div class="modal-content">
                    <div class="modal-header border-bottom-0">
                        
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                    <div class="modal-body">
                        <div class="table-responsive">
                            <table id="example2" class="table table-hover">
                                <thead>
                                    <tr>
                                        <th>Tarea</th>
                                        <th>Estado</th>
                                        <th>Porcentaje</th>
                                       
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var tarea in tareas)
                                    {

                                        <tr>                                        
                                            <td style="vertical-align:middle;">@tarea.NombreTarea</td>
                                            <td style="vertical-align:middle;">@tarea.EstadoTarea</td>
                                            <td style="vertical-align:middle;">@tarea.PorcentajeTarea</td>
                                        </tr>

                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>

                    <div class="modal-footer border-top-0 d-flex justify-content-center">
                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Cerrar</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- /.container-fluid -->
</section>
<!-- /.content -->
@section Scripts {
    <script>
        $(document).ready(function () {
            $('#example2').DataTable({
                "order": [[2, "asc"]],
                "paging": true,
                "lengthChange": true,
                "lengthMenu": [[50, 100, 150, -1], [50, 100, 150, "All"]],
                "searching": true,
                "ordering": true,
                "info": true,
                "autoWidth": true,
                "language": {
                    url: "//cdn.datatables.net/plug-ins/1.11.3/i18n/es_es.json"
                },
            });


        });




    </script>
}
